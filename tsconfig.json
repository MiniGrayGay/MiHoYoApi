    "target": "ES2020",
    "outDir": "./dist",
    "newLine": "LF",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "docs",
    "example"
  ]
}
